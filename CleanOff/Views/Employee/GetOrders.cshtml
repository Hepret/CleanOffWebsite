@model System.Collections.Generic.List<CleanOff.Domain.Order>

@{
    Layout = "_EmployeePanelLayout";
}

<div class="container">
    <div class="text-center mt-5">
        <h1>Заказы</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Описание заказа</th>
            <th>Статус</th>
            <th>Дата создания</th>
            <th></th>

        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Description</td>
                <td>@order.OrderState</td>
                <td>@order.RequestDate</td>
                                <td><a href="@Url.Action("Order", values: new { orderId = order.OrderId })" class="btn btn-primary">Перейти к заказу</a></td>
            </tr>
        }
        </tbody>
    </table>

}
else
{
                <p class="text-center mt-4">Пока заказов нет</p>
}
        </div>
    </div>
</div>
