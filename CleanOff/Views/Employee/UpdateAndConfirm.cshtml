@model CleanOff.Domain.Order

@{
    Layout = "_EmployeePanelLayout";
}

<form method="post" action="/employee/order/check/updateAndConfirm?orderId=@Model.OrderId">
  <div class="form-group">
    <label for="address">Адрес</label>
    <input type="text" class="form-control" id="address" name="Address" value="@Model.Address" placeholder="Введите адрес">
  </div>
  
  
  <div class="form-group">
      <label for="description">Описание заказа</label>
      <input type="text" class="form-control" id="description" name="Description" value="@Model.Description" >
  </div>

  <div class="form-group">
    <label for="price">Цена</label>
    <input type="number" class="form-control" id="price" name="Price" value="@Model.Price" placeholder="Введите цену">
  </div>
  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" name="NeedDelivery"  id="delivery" checked="@(Model.NeedDelivery ? "checked" : "unchecked")" value="true">
      <label class="form-check-label" for="delivery">
        Нужна ли доставка
      </label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Отправить</button>
</form>
